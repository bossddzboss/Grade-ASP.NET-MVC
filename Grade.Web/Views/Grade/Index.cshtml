@model IEnumerable<Grade.Web.Models.GradeModel>

@{
    ViewBag.Title = "เว็บตัดเกรด";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>เกณฑ์คะแนนในการประเมินเกรด</h2>

<p>
    @Html.ActionLink("เพิ่มเกรด", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GradeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Min)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Max)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model.OrderBy(g => g.Id)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GradeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Min)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Max)
        </td>
        <td>
            @Html.ActionLink("แก้ไข", "Edit", new { id = item.Id }) |
            @Html.ActionLink("รายละเอียด", "Detail", new { id = item.Id }) |
            @Html.ActionLink("ลบ", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
